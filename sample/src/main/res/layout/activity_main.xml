<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alorma.cityview.sample.MainActivity"
    >

  <com.alorma.cityview.CityView
      android:layout_width="match_parent"
      android:layout_height="140dp"
      android:layout_gravity="bottom"
      android:layout_margin="10dp"
      >

    <com.alorma.cityview.BuildingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:building_color="@color/colorPrimary"
        />

    <com.alorma.cityview.BuildingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:building_color="@color/colorAccent"
        />

    <com.alorma.cityview.BuildingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:building_color="@color/colorPrimaryDark"
        />

    <com.alorma.cityview.BuildingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:building_color="@color/colorAccent"
        />

  </com.alorma.cityview.CityView>

</FrameLayout>
